@model IEnumerable<SOL_JHEREMIAS_PULACHE.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    Tipo Usuario
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoUsuario.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>

                        @Html.ActionLink("Editar", "Edit", new { id = item.IdUsuario },
                                     new
                                     {
                                         @class = "btn-style bg-primary"
                                     })
                        @Html.ActionLink("Detalle", "Details", new { id = item.IdUsuario },
                                                         new
                                                         {
                                                             @class = "btn-style bg-info"
                                                         })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdUsuario },
                                          new
                                          {
                                              @class = "btn-style bg-danger"
                                          })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>